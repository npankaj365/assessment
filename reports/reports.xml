<odoo>

    <report
        id="action_question_paper"
        model="assessment.test_creation_asmt"
        string="Test Creations"
        name="assessment.test_creation_asmt"
        report_type="qweb-html" />

    <template id="assessment.test_creation_asmt">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.internal_layout">
                    <div class="page">
                        <ol>
                            <t t-foreach="doc.selected_questions_list" t-as="question">
                                
                                    <div class="row">
                                        <li>
                                            <span t-field="question.statement" />
                                            
                                            <ul>
                                                <t t-call="assessment.answer_asmt">
                                                <t t-foreach="question.answer" t-as="answer">
                                                    
                                                    <li><span t-field="answer.description" /></li>
                                                    
                                                </t>
                                                </t>
                                            </ul>
                                        </li>
                                    </div>
                            </t>
                        </ol>
                    </div>
                </t>
            </t>
        </t>
    </template>
                        






