<odoo>

    <report
        id="action_question_paper"
        model="assessment.test_creation_asmt"
        string="Test Creations"
        name="assessment.test_creation_asmt"
        report_type="qweb-html" />

    <template id="test_creation_asmt">
        <t t-call="web.html_container">
        <div width="80%">
            <t t-foreach="docs.lesson" t-as="lesson">    
                <t t-call="web.internal_layout">
                    <hr weight="1"/>
                    <t t-foreach="lesson.objective" t-as="objective">
                        <div>
                            <ol>
                                <t t-foreach="objective.question" t-as="question">
                                    <div>
                                        <li>
                                            <span t-field="question.statement"/>
                                            <br />
                                            <t t-foreach="question.answer" t-as="answer">
                                                <ul>
                                                    <li><span t-field="answer.description" /></li>
                                                    <br />
                                                </ul>
                                            </t>
                                        </li>
                                    </div>
                                </t>
                            </ol>
                        </div>
                    </t>
                </t>
            </t>
        </div>
        </t>
    </template>

