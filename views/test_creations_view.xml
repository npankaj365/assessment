<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="assessment.view_tree_test_creation" model="ir.ui.view">
            <field name="name">Test Creations</field>
            <field name="model">assessment.test_creation_asmt</field>
            <field name="arch" type="xml">
                <tree string="Test Creations">
                    <field name="name" />
                    <field name="description" />
                    <field name="date" />
                    <field name="test_duration" />
                    <field name="question_type" />
                    <field name="domain" />
                    <field name="subdomain" />
                    <field name="lesson" />
                </tree>
            </field>
        </record>
        <record id="assessment.view_form_test_creation" model="ir.ui.view">
            <field name="name">Test Creations</field>
            <field name="model">assessment.test_creation_asmt</field>
            <field name="arch" type="xml">
                <form string="Test Creations">
                    <header>
                        <button type="object" class="btn btn-success" name="generate" string="Generate" />
                        <button type="object" class="btn btn-warning" name="clear" string="Clear" />
                    </header>
                    <sheet>
                        <group>
                            <field name="name" />
                            <field name="description" />
                            <field name="date" />
                            <field name="test_duration" />
                            <field name="question_type" />
                            <field name="domain" />
                            <field name="subdomain" />
                            <field name="lesson" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>